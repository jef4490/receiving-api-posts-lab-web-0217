<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>
<br>
<div class="new-product-area">
  <h1 id="new-name"></h1>
  <p id="new-price"></p>
  <p id="new-desc"></p>
</div>

<script type="text/javascript">
  $(function () {
    $('form').submit( function(event) {
      event.preventDefault();
      var values =  $(this).serialize();
      let posting = $.post('/products', values);
      posting.done(function(data) {
        $('#new-name').text(data.name);
        $('#new-price').text("Price: " + data.price)
        $('#new-desc').text("Description: " + data.description)
      })
    })
  })
</script>
